{
	"name": "Formfill",
	"description": "Fill forms with pre-selected data.",
	"version": "0.2.0",
	"manifest_version": 3,
	"icons": {
		"16": "images/logo-16.png",
		"32": "images/logo-32.png",
		"48": "images/logo-48.png",
		"128": "images/logo-128.png",
		"150": "images/logo-150.png"
	},
	"options_page": "/option.html",
	"permissions": [
		"storage",
		"scripting",
		"activeTab",
		"contextMenus"
	],
	"action": {
		"default_title": "Fill page forms"
	},
	"background": {
		"service_worker": "service_worker.js"
	}
}